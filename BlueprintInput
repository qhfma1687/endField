from sqlalchemy import ForeignKey


class BlueprintInput(Base):
    __tablename__ = "blueprint_inputs"

    id = Column(Integer, primary_key=True)
    blueprint_id = Column(Integer, ForeignKey("blueprints.id"))
    item_id = Column(Integer, ForeignKey("items.id"))

    amount_per_min = Column(Float)  # 분당 소비량

    blueprint = relationship("Blueprint", back_populates="inputs")
    item = relationship("Item", back_populates="blueprint_inputs")
